#
# bspwm hotkeys
#

super + shift + q 
    bspc quit

super + {minus,plus}
    bspc config window_gap $(print "$(($(bspc config window_gap)+{-5,5}))")
super + shift + {minus,plus}
    bspc config split_ratio $(print "$(($(bspc config split_ratio)+{-0.05,0.05}))")



super + w
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + control + shift + {h,j,k,l}
    bspc window -w {left,down,up,right}

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left,down,up,right} push

super + alt + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} {1-9,0}

super + {1-9,0}
    bspc desktop -f {1-9,0}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + space
    bspc desktop -l next

#
# wm independent hotkeys
#

super + Return
    urxvt

super + p
    dmenu_run

super + q
    firefox

super + a
    pavucontrol

# make sxhkd reload ijs configuration files:
super + ctrl + q
    pkill -USR1 -x sxhkd

XF86AudioPlay
    ncmpcpp toggle

XF86AudioNext
    ncmpcpp next

XF86AudioPrev
    ncmpcpp prev

F12
    {bspc desktop -f pad,bspc desktop -f last}

ctrl + space
    {bspc config window_gap 0;bspc config border_width 1,bspc config window_gap 24;bspc config border_width 5}
